<p class="px-2 ">
  <%= image_tag(comment.user.avatar.url(:small)) %><stong> <%= comment.user.email %>:  <%= comment.body %> </stong>
</p>

<% if current_user==comment.user %>
<p class="px-2">
  <%= link_to "Destroy Comment", [comment.article, comment], data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
</p>
<% end %>




